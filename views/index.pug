doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title TravelEase
    link(rel="stylesheet", href="style.css")
  body
    nav.navbar
      .logo
        img.logo-img(src="logo.png", alt="TravelEase Logo")
      // Burger icon
      .burger#burger
        span
        span
        span
      .navright
        ul.nav-links
          li: a(href="#") Home
          li: a(href="#") Trekking
          li: a(href="#") Expeditions
          li: a(href="#") Tours
          li: a(href="contact.html") Contact
        ul.nav-links
          li: a(href="login.html") Log in
          li: a(href="#") Sign up

    .hero
      img.hero-img(src="mainPhoto.jpg", alt="Mountain View")
      .overlay
        span TravelEase: Book your next Tour
      .overlaybottom
        span Our handpicked itineraries for your next holidays

    main.main
      .card-container
        each tour in [1, 2, 3, 4, 5, 6, 7, 8, 9]
          .card
            .card__header
              .card__picture
                .card__picture-overlay
                img.card__picture-img(src="img/tours/Muktinath.jpeg", alt="Tour 1")
              h3.heading-tertirary
                span Muktinath Pilgrimage
            .card__details
              h4.card__sub-heading Easy 5-day tour
              p.card__text Experience peace, spirituality, and breathtaking mountain views on our Muktinath Tour.
              .card__data
                svg.card__icon
                  use(xlink:href="img/icons.svg#icon-map-pin")
                span Muktinath, Nepal
              .card__data
                svg.card__icon
                  use(xlink:href="img/icons.svg#icon-calendar")
                span April 2021
              .card__data
                svg.card__icon
                  use(xlink:href="img/icons.svg#icon-flag")
                span 3 stops
              .card__data
                svg.card__icon
                  use(xlink:href="img/icons.svg#icon-user")
                span 25 people
            .card__footer
              p
                span.card__footer-value $297
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value 4.9
                span.card__footer-text rating (21)
              a.btn.btn--green.btn--small(href="tour.html") Details

    footer
      .footerBox
        section.footer-contact
          .footer-inner
            img.footer-logo(src="logo.png", alt="Travel Ease logo")
            p
              i.icon 📞
              a(href="tel:+9779768787877") +977-9856756785
            p
              i.icon ✉️
              a(href="mailto:TravelEase@gmail.com") TravelEase@gmail.com
            p
              i.icon 📍 Thamel, Kathmandu, Bagmati, 44600, Nepal
            p Copyright &copy; Travel Ease Pvt Ltd All Rights Reserved

    script.
      const burger = document.getElementById('burger');
      const nav = document.querySelector('.navright');

      burger.addEventListener('click', () => {
        nav.classList.toggle('active');
        burger.classList.toggle('active');
      });